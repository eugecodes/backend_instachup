<%- model_class = Subcategory -%>
<div class="page-header">
  <h1>Subcategoría</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre:</strong></dt>
  <dd><%= @subcategory.name %></dd>
  <dt><strong>Categoría:</strong></dt>
  <dd><%= @subcategory.category %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Atras', subcategories_path, :class => 'btn'  %>
  <%= link_to 'Editar', edit_subcategory_path(@subcategory), :class => 'btn' %>
  <%= link_to 'Eliminar', subcategory_path(@subcategory),
              :method => 'delete',
              :data => { :confirm =>'¿Esta seguro que desea eliminar la subcategoría?' },
              :class => 'btn btn-danger' %>
</div>
