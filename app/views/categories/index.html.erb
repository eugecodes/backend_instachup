<%- model_class = Category -%>
<div class="page-header">
  <h1>Categorías</h1>
      </div>
      <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th>Nombre</th>
          <th>Fecha de creación</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
      <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.id, category_path(category) %></td>
        <td><%= link_to category, category_path(category) %></td>
        <td><%= category.created_at.strftime('%d %b. %Y') %></td>
        <td>
          <%= link_to 'Editar', edit_category_path(category), :class => 'btn btn-mini' %>
          <%= link_to 'Eliminar', category_path(category),
                      :method => :delete,
                      :data => { :confirm =>'¿Esta seguro que desea eliminar la categoría?' },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% end %>
      </tbody>
      </table>

      <%= link_to 'Nueva', new_category_path, :class => 'btn btn-primary' %>
